<!DOCTYPE html>
<html lang="en">
<head>
   {{>headerlink}}
</head>
<body>
    {{>navbar}}

    <!-- main header -->
    <div class="container-fluid main_header">
        <div class="row">
            <div class="col-md-10 col-12 mx-auto">
               <div class="main_content">
                <form class="temp_form">
                    <input type="text" id="cityName" placeholder="Enter Your City Name" autocomplete="off">
                    <Button type="submit" id="submitBtn"><span>Submit</span></Button>
                </form>
               </div>
               <div class ="temp_info">
                    <div class="top_layer">
                        <p id="day">Tuesday</p>
                        <p id="today_date">26 Jun</p>
                    </div>
                    <div class="main_layer">
                        <p id="city_name">Output will be shown here</p>
                        <div class="middle_layer data_hide">
                            <p id="temp"><span id="span">0</span> <sup>o</sup>C</p>
                            <p id="temp_status"> <i class="fa fa-cloud" aria-hidden="true"></i> </p>
                        </div>
                    </div>
               </div>
            </div>
        </div>
    </div> 
    
    <!-- footer code -->
    {{>footer}}

    <script src="js/main.js"></script>
</body>
</html>